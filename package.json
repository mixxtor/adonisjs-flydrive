{
  "name": "adonisjs-flydrive",
  "description": "Adonisjs drive providers",
  "version": "0.0.9",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./services/main": "./build/services/main.js",
    "./flydrive_provider": "./build/providers/flydrive_provider.js",
    "./types": "./build/src/types/index.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --report-unused-disable-directives --quiet",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "npm run copy:templates",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "keywords": [],
  "author": "mixxtor",
  "license": "MIT",
  "dependencies": {
    "@poppinss/utils": "^6.7.3",
    "flydrive": "^1.0.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/core": "^6.12.1",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^3.0.0",
    "@japa/runner": "^3.1.4",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.7.4",
    "@types/node": "^22.0.2",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "semantic-release": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.12.1"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types.ts",
      "./services/main.ts",
      "./providers/flydrive_provider.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  }
}
